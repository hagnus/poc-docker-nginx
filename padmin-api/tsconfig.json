{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],               
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "src/database/migrations/**/*",
    "src/database/seeds/**/*",
    "./node_modules/**/*",
    "./db/data/**/*",
    "./dist/**/*"
  ]
}